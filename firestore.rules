rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSuperAdmin() {
       return request.auth != null && request.auth.token.email == 'michael@schellenberger.biz';
    }

    function isAdmin() {
      // Allow Super Admin OR anyone in the 'users' collection of the CURRENT app (derived from path)
      return isSuperAdmin() || (
        request.auth != null && 
        request.path.size() > 5 &&
        request.path[3] == 'artifacts' &&
        exists(/databases/$(database)/documents/artifacts/$(request.path[4])/public/data/users/$(request.auth.uid))
      );
    }
    
    function isIncrement(field) {
      return request.resource.data[field] == resource.data[field] + 1;
    }

    // Global Config
    match /global/config {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Global Stats (Champions)
    match /global/stats {
      allow read: if true;
      allow create: if true; // Allow creating if not exists
      allow update: if isSuperAdmin() || (
        // Allow updating stats fields (simplified check)
        request.resource.data.diff(resource.data).affectedKeys().hasAny(['championsCount', 'count_bronze', 'count_silver', 'count_gold', 'count_diamond'])
      );
    }

    // Artifacts (App Data)
    match /artifacts/{appId}/public/data {
      
      // Users (Admins)
      match /users/{userId} {
        // Any authenticated user can read the user list (needed for UI) or at least admins
        allow read: if request.auth != null; 
        
        // Only Super Admin can delete/manage users, OR a user can update their own 'lastSeen'
        allow write: if isSuperAdmin() || (request.auth.uid == userId);
      }

      // Stations
      match /stations/{stationId} {
        allow read: if true;
        allow create, delete: if isAdmin();
        allow update: if isAdmin() || (
          // Allow incrementing likes
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']) &&
          isIncrement('likes')
        );
      }

      // Events
      match /events/{eventId} {
        allow read: if true;
        allow write: if isAdmin();
      }

      // Presence (Heartbeat)
      match /presence/{sessionId} {
        allow read: if true;
        allow write: if true; // Public write for heartbeat
      }
    }

    // Config (Downloads)
    match /artifacts/{appId}/public/config {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Broadcast (Messages)
    match /artifacts/{appId}/public/broadcast {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Reports
    match /artifacts/{appId}/public/reports/{reportId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
  }
}
